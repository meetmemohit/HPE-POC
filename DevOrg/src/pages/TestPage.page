<apex:page standardController="Account">
 <apex:form >
   <apex:pageblock title="Quick Edit">
     <apex:pageBlockSection title="Account Details" columns="1">
       <apex:OutputField value="{!account.name}" label="Account Name"/>  
       <apex:inputfield value="{!account.accountnumber}" label="{!account.name + '`s Account Number'}"/>
     </apex:pageBlockSection>
     <apex:pageBlockSection >
       <apex:commandButton action="{!save}" value="Update"/>
     </apex:pageBlockSection>
   </apex:pageblock>
 </apex:form>
 </apex:page>