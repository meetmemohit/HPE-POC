<apex:page standardController="Account">
<apex:form >
<apex:pageBlock title="Edit Account: {!Account.Name}">
<apex:pageBlockSection title="Account Details" columns="1">
<apex:pageBlockSection >
  <apex:commandButton action="{!save}" value="Update" />
</apex:pageBlockSection>
<apex:inputField value="{!Account.Name}" taborderhint="1"/>
<apex:inputField value="{!Account.Website}" taborderhint="2"/>
<apex:inputField value="{!Account.Industry}" taborderhint="3"/>
<apex:inputField value="{!Account.AnnualRevenue}" taborderhint="4"/>
</apex:pageBlockSection>
<apex:pageBlockSection >
  <apex:commandButton action="{!save}" value="Update" />
</apex:pageBlockSection>
</apex:pageBlock>
</apex:form>
</apex:page>